@inherits UmbracoViewPage<IWarnings>;

<div class="flex flex-col mx-auto w-full px-28 py-6 justify-start items-start">
    <button><i class="fas fa-home fa-sm"></i><span> | Göteborg | Så planeras staden</span></button>
    <div class="w-full h-56 mt-10 bg-red-50">
        <div class="flex w-full flex-col h-full justify-center items-baseline p-8">
            <div class="flex justify-between">
                <div class="w-4/6">
                    <div class="text-2xl font-extrabold">@Model.WarningsTitle</div>
                    <div class="mt-2 text-xs uppercase">@Model.WarningsDate</div>
                    <div class="text-sm mt-2">@Model.WarningsText</div>
                    <a href="https://www.goteborg.se"><div class="mt-4 text-sm font-bold text-sbk_blue">@Model.WarningsLinkText</div></a>
                </div>
                <div>
                    <img class="object-cover w-64" src="@Model.WarningsImage.Url()" alt="Grävmaskin">
                </div>

            </div>
        </div>
    </div>
</div>